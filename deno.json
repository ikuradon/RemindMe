{
  "fmt": {
    "include": [
      "."
    ],
    "indentWidth": 2,
    "lineWidth": 120,
    "proseWrap": "preserve",
    "semiColons": true,
    "singleQuote": true,
    "useTabs": false
  },
  "imports": {
    "@nostr-dev-kit/ndk": "npm:@nostr-dev-kit/ndk@2.3.2",
    "chalk": "npm:chalk@5.3.0",
    "chrono-node": "npm:chrono-node@2.7.4",
    "date-fns": "npm:date-fns@3.2.0",
    "dotenv": "https://deno.land/std@0.212.0/dotenv/mod.ts"
  },
  "lint": {
    "include": [
      "."
    ],
    "rules": {
      "exclude": [
        "no-explicit-any"
      ],
      "tags": [
        "recommended"
      ]
    }
  },
  "tasks": {
    "dev": "deno run --unstable-cron --unstable-kv --allow-env --allow-net --allow-read --allow-write --watch src/bot.ts",
    "start": "deno run --unstable-cron --unstable-kv --allow-env --allow-net --allow-read --allow-write src/bot.ts"
  }
}
